<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h3>You are in {{ name }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-offset-xs-3">
            <table class="centered table table-bordered">
                <tbody>
                    {{#each map.rows as |row|}}
                    <tr>
                        {{#each row.cells as |cell|}}
                        <td>{{cell.text}}</td>
                        {{/each}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
